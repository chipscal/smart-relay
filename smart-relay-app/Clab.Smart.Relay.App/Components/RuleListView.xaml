<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clab.Smart.Relay.App.RuleListView">


    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*">
            <Label Grid.Column="0"
                    Text="Rules:"
                   FontSize="20"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Margin="10"/>

            <ImageButton Grid.Column="1"
                         HorizontalOptions="End"
                         Source="plus_button_primary.png"
                         Margin="10"
                         HeightRequest="10"
                         CornerRadius="20"
                         Clicked="AddRuleClicked">
            </ImageButton>
        </Grid>
        <CollectionView x:Name="DeviceRulesListInstance"
                ItemsSource="{Binding DeviceRules}"
                Margin="5">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10"
                            Margin="5">
                        <Grid ColumnDefinitions="2*,5*,1*">
                            <Border Grid.Column="0"
                                    Background="{StaticResource Primary}"
                                    Stroke="{StaticResource Secondary}"
                                    WidthRequest="50"
                                    HeightRequest="50"
                                    Margin="10"
                                    HorizontalOptions="Start">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label
                                    Text="{Binding Index}"
                                        Grid.Column="0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    FontAttributes="Bold"
                                    FontSize="{OnIdiom Phone=20, Tablet=24, Desktop=24}"/>
                            </Border>

                            <Label Grid.Column="1"
                                    Text="{Binding CombinedRule}"
                                    FontSize="{OnIdiom Phone=17, Tablet=20, Desktop=20}"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    FontAutoScalingEnabled="True"/>

                            <Label Grid.Column="2"
                                    Text="{Binding Action}"
                                    FontSize="{OnIdiom Phone=20, Tablet=24, Desktop=24}"
                                    FontAttributes="Bold"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    FontAutoScalingEnabled="True"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentView>