<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Clab.Smart.Relay.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Clab.Smart.Relay.App"
    Title="Clab.Smart.Relay.App">

    <ShellContent Shell.NavBarIsVisible="True"
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent Shell.NavBarIsVisible="True"
        Title="Scan"
        ContentTemplate="{DataTemplate local:ScanPage}"
        Route="ScanPage" />

    <ShellContent Shell.NavBarIsVisible="True"
        Title="Devices" 
        ContentTemplate="{DataTemplate local:DevicesPage}"
        Route="DevicesPage" />

    <ShellContent Shell.NavBarIsVisible="True"
        Title="Device" 
        ContentTemplate="{DataTemplate local:DevicePage}"
        Route="DevicePage" />

</Shell>
